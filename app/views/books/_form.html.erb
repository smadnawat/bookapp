<%= form_for(@book) do |f| %>
  <%= book_error_messages! %>

  <%= f.hidden_field :user_id, value: @book.user_id %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :author_name %>
    <%= f.text_field :author_name, autocomplete: 'author name', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :publish_year %>
    <%#= f.select_field :publish_year, autocomplete: 'publish year', class: 'form-control' %>
    <%= f.select :publish_year, (1400..Date.today.year).to_a.reverse, class: "form-select" %>
    <small class="form-text text-muted">Starting Year 1400</small>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-primary' %>
  </div>
<% end %>